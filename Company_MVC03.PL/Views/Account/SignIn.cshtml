@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All"></div>
        <form asp-action="SignIn">
            <input class="text email" asp-for="Email" placeholder="Email" required>
            <input class="text" asp-for="Password" placeholder="Password" required>
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox">
                    <span>Remembre Me ?</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="Signin">
        </form>
        <p>Don't have an Account? <a asp-action="SignUp">Signup Now!</a></p>
    </div>
</div>



@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}