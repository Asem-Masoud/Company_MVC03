@model SignUpDto


@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="m-3 alert alert-info"></div>
        <form asp-action="SignUp">

            <div>
                <label asp-for="FirstName" class="col-form-label"></label>
                <input asp-for="FirstName" placeholder="First Name" class="form-control" required="">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LastName" class="col-form-label"></label>
                <input asp-for="LastName" placeholder="Last Name" class="form-control" required="">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="UserName" class="col-form-label"></label>
                <input asp-for="UserName" placeholder="UserName" class="form-control" required="">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" required="">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" required="">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="col-form-label"></label>
                <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" required="">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Have an Account? <a asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}