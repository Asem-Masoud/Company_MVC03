@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
}


<h1>All Users</h1>

<br />
<br />

<form>
    <div class="row m-4">
        <div class="col-6">
            <input type="text" id="SearchInput" name="SearchInput" class="form-control" />
        </div>
        <div class="col-6">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-primary">Create Role</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Create</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                    <partial name="_ButtonPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-success">
        <h4>
            There are no Roles :(
        </h4>
    </div>
}










